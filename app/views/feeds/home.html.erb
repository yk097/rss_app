<header class="container">
  <div class="headerbox">
    <div class="left-image">
      <%= image_tag 'pitcher.png' %>
    </div>
    <div class="logo-image">
      <%= link_to image_tag('logo-large.png'), "/" %>
    </div>
    <div class="right-image">
      <%= image_tag 'batter.png' %>
    </div>
  </div>
</header>

<div class="container">
  <div class="feedcontainer">
    <% @channels.each do |channel| %>
      <div class="contentsbox">
        <div class="sitename">
          <%= link_to channel.title, channel.url %>
        </div>
        <div class="rssitems">
          <ul>
            <% channel.items.first(5).each do |item| %>
              <li>
                <%= link_to item.title, item.url, target: :_blank, rel: "noopener noreferrer" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
